apiVersion: v1
kind: Service
metadata:
  name: myhero-ui
  namespace: myhero
  labels:
    app: myhero
    tier: ui
spec:
  ports:
  - port: 80
    name: http
    targetPort: http
  selector:
    app: myhero
    tier: ui
  type: ClusterIP
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: myhero-ui-v1
  namespace: myhero
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: myhero
        tier: ui
        version: v1
    spec:
      containers:
      - name: myhero-ui
        image: ciscodevnet/myhero-ui-v1:latest
        livenessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 5
          periodSeconds: 5
        readinessProbe:
          httpGet:
            path: /
            port: 80
          initialDelaySeconds: 5
          periodSeconds: 5
        ports:
        - containerPort: 80
          name: http
          protocol: TCP
        env:
          - name: myhero_app_server
            value: http://app.<Istio-ingressgateway-IP>.xip.io
          - name: myhero_app_key
            value: SecureApp
        imagePullPolicy: IfNotPresent
        resources:
          limits:
            cpu: 100m
            memory: 48M
      restartPolicy: Always
---
